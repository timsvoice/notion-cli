{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Notion Databases Create",
  "type": "object",
  "required": ["parent", "title", "properties"],
  "properties": {
    "parent": {
      "type": "object",
      "oneOf": [
        {"required": ["page_id"], "properties": {"page_id": {"type": "string"}}}
      ]
    },
    "title": {
      "type": "array",
      "minItems": 1,
      "items": {"type": "object"}
    },
    "properties": {
      "type": "object",
      "minProperties": 1
    },
    "icon": {"type": ["object", "null"]},
    "cover": {"type": ["object", "null"]},
    "description": {"type": "array", "items": {"type": "object"}}
  },
  "additionalProperties": true
}
