{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Notion Data Sources Create",
  "type": "object",
  "required": ["parent", "title", "properties"],
  "properties": {
    "parent": {
      "type": "object",
      "oneOf": [
        {"required": ["database_id"], "properties": {"database_id": {"type": "string"}}},
        {"required": ["page_id"], "properties": {"page_id": {"type": "string"}}}
      ]
    },
    "title": {"type": "array", "items": {"type": "object"}},
    "properties": {"type": "object", "minProperties": 1},
    "icon": {"type": ["object", "null"]},
    "cover": {"type": ["object", "null"]}
  },
  "additionalProperties": true
}
